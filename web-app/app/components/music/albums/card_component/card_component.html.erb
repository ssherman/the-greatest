<%= link_to_album item_album, ranking_configuration, class: "card bg-base-100 shadow-xl hover:shadow-2xl transition-shadow", data: { turbo_frame: "_top" } do %>
  <figure class="px-4 pt-4">
    <% if item_album.primary_image&.file&.attached? %>
      <%= image_tag rails_public_blob_url(item_album.primary_image.file),
          alt: item_album.title,
          class: "rounded-xl w-full aspect-square object-cover" %>
    <% else %>
      <div class="bg-base-200 rounded-xl w-full aspect-square flex items-center justify-center">
        <span class="text-base-content/50">No Image</span>
      </div>
    <% end %>
  </figure>

  <div class="card-body p-4">
    <div class="flex items-start justify-between mb-2">
      <% if show_rank? %>
        <div class="badge badge-primary badge-lg font-bold">
          #<%= ranked_item.rank %>
        </div>
      <% end %>
      <div class="<%= show_rank? ? 'text-right' : '' %> text-sm text-base-content/70">
        <% if item_album.release_year %>
          <%= item_album.release_year %>
        <% end %>
      </div>
    </div>

    <h2 class="card-title text-lg font-bold text-base-content mb-1">
      <%= item_album.title %>
    </h2>

    <p class="text-base-content/80 mb-3">
      by <%= item_album.artists.map(&:name).join(", ") %>
    </p>

    <% if item_album.categories.any? %>
      <div class="flex flex-wrap gap-1">
        <% item_album.categories.limit(3).each do |category| %>
          <span class="badge badge-ghost badge-sm">
            <%= category.name %>
          </span>
        <% end %>
        <% if item_album.categories.count > 3 %>
          <span class="badge badge-ghost badge-sm">
            +<%= item_album.categories.count - 3 %> more
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
