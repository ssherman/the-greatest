<%= render(Wizard::StepComponent.new(
  title: "Validate Data",
  description: "Validate song data and check for issues",
  step_number: 4,
  active: true
)) do |step| %>
  <% step.with_step_content do %>
    <div class="space-y-6"
         <% if list.wizard_job_status == "running" %>
           data-controller="wizard-step"
           data-wizard-step-status-url-value="<%= step_status_admin_songs_list_wizard_path(list_id: list.id, step: 'validate') %>"
           data-wizard-step-step-url-value="<%= step_admin_songs_list_wizard_path(list_id: list.id, step: 'validate') %>"
         <% end %>>

      <div class="progress w-full" data-wizard-step-target="progressBar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 0%">
          <span class="progress-text">0%</span>
        </div>
      </div>

      <div class="text-center text-base-content/70" data-wizard-step-target="statusText">
        Validating songs...
      </div>
    </div>
  <% end %>
<% end %>
