<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <%= link_to domain_config[:categories_path], class: "btn btn-ghost btn-sm btn-circle", data: { testid: "back-button" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= category.name %></h1>
        <span class="badge badge-outline badge-lg">
          <%= category.category_type.titleize %>
        </span>
      </div>
      <div class="flex items-center gap-4 text-sm text-base-content/70">
        <span>ID: <span class="font-mono"><%= category.id %></span></span>
        <span>Created <%= helpers.time_ago_in_words(category.created_at) %> ago</span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_category_path(category), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <%= helpers.button_to category_path(category),
          method: :delete,
          class: "btn btn-error btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete #{category.name}? This cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Basic Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Name</span>
              </label>
              <p class="text-lg"><%= category.name %></p>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Category Type</span>
              </label>
              <span class="badge badge-outline badge-lg">
                <%= category.category_type.titleize %>
              </span>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Parent Category</span>
              </label>
              <% if category.parent.present? %>
                <%= link_to category.parent.name, category_path(category.parent), class: "link link-primary" %>
              <% else %>
                <span class="text-base-content/50">None</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Total Items</span>
              </label>
              <p class="text-lg font-mono"><%= category.item_count %></p>
            </div>
          </div>

          <% if category.description.present? %>
            <div class="mt-4">
              <label class="label">
                <span class="label-text font-semibold">Description</span>
              </label>
              <p class="text-base-content/80 whitespace-pre-wrap"><%= category.description %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Child Categories -->
      <% if category.child_categories.active.any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">
              Child Categories
              <span class="badge badge-ghost"><%= category.child_categories.active.count %></span>
            </h2>
            <div class="flex flex-wrap gap-2">
              <% category.child_categories.active.sorted_by_name.each do |child| %>
                <%= link_to category_path(child), class: "badge badge-outline badge-lg hover:badge-primary" do %>
                  <%= child.name %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Stats -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Item Counts</h2>
          <div class="stats stats-vertical shadow">
            <% stats.each_with_index do |(label, count), index| %>
              <div class="stat">
                <div class="stat-title"><%= label %></div>
                <div class="stat-value <%= stat_color(index) %>"><%= count %></div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Metadata -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-sm">Metadata</h2>
          <div class="space-y-2 text-sm">
            <div>
              <span class="text-base-content/70">Slug:</span>
              <span class="font-mono"><%= category.slug %></span>
            </div>
            <% if category.import_source.present? %>
              <div>
                <span class="text-base-content/70">Import Source:</span>
                <span class="badge badge-sm"><%= category.import_source.titleize %></span>
              </div>
            <% end %>
            <div>
              <span class="text-base-content/70">Created:</span>
              <span><%= category.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
            <div>
              <span class="text-base-content/70">Updated:</span>
              <span><%= category.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
