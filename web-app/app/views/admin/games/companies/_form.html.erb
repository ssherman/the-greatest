<%= form_with model: @company, url: @company.persisted? ? admin_games_company_path(@company) : admin_games_companies_path, class: "space-y-6" do |f| %>
  <!-- Error Messages -->
  <% if @company.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold"><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @company.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Basic Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Name -->
        <div class="form-control md:col-span-2">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-semibold">Name <span class="text-error">*</span></span>
          <% end %>
          <%= f.text_field :name,
              class: "input input-bordered w-full #{@company.errors[:name].any? ? 'input-error' : ''}",
              placeholder: "Enter company name",
              required: true,
              autofocus: true %>
          <% if @company.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @company.errors[:name].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Country -->
        <div class="form-control">
          <%= f.label :country, class: "label" do %>
            <span class="label-text font-semibold">Country</span>
          <% end %>
          <%= f.text_field :country,
              class: "input input-bordered w-full #{@company.errors[:country].any? ? 'input-error' : ''}",
              placeholder: "e.g., US, JP, GB",
              maxlength: 2 %>
          <label class="label">
            <span class="label-text-alt">2-letter country code (ISO 3166-1 alpha-2)</span>
          </label>
          <% if @company.errors[:country].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @company.errors[:country].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Year Founded -->
        <div class="form-control">
          <%= f.label :year_founded, class: "label" do %>
            <span class="label-text font-semibold">Year Founded</span>
          <% end %>
          <%= f.number_field :year_founded,
              class: "input input-bordered w-full #{@company.errors[:year_founded].any? ? 'input-error' : ''}",
              placeholder: "e.g., 1986",
              min: 1900,
              max: Time.current.year %>
          <% if @company.errors[:year_founded].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @company.errors[:year_founded].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Description -->
        <div class="form-control md:col-span-2">
          <%= f.label :description, class: "label" do %>
            <span class="label-text font-semibold">Description</span>
          <% end %>
          <%= f.text_area :description,
              class: "textarea textarea-bordered w-full h-32 #{@company.errors[:description].any? ? 'textarea-error' : ''}",
              placeholder: "Enter a description of the company..." %>
          <% if @company.errors[:description].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @company.errors[:description].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-2 justify-end">
    <%= link_to "Cancel", @company.persisted? ? admin_games_company_path(@company) : admin_games_companies_path, class: "btn btn-ghost" %>
    <%= f.submit @company.persisted? ? "Update Company" : "Create Company", class: "btn btn-primary" %>
  </div>
<% end %>
