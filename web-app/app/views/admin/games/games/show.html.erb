<!-- Add Category Modal -->
<%= render Admin::AddCategoryModalComponent.new(item: @game) %>

<!-- Add Image Modal -->
<dialog id="add_image_modal" class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg">Add Image</h3>
    <p class="py-2 text-sm text-base-content/70">
      Upload an image for this game. Supported formats: JPEG, PNG, WebP, GIF.
    </p>

    <%= form_with model: Image.new,
                  url: admin_games_game_images_path(@game),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_image_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :file, class: "label" do %>
          <span class="label-text font-semibold">Image File <span class="text-error">*</span></span>
        <% end %>
        <%= f.file_field :file,
            accept: "image/jpeg,image/png,image/webp,image/gif",
            class: "file-input file-input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Max recommended size: 10MB</span>
        </label>
      </div>

      <div class="form-control">
        <%= f.label :notes, class: "label" do %>
          <span class="label-text font-semibold">Notes</span>
        <% end %>
        <%= f.text_area :notes,
            class: "textarea textarea-bordered w-full",
            rows: 2,
            placeholder: "Optional description or notes about this image" %>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :primary, class: "checkbox checkbox-primary" %>
          <span class="label-text">Set as primary image</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_image_modal.close()">Cancel</button>
        <%= f.submit "Upload Image", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
