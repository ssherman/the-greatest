<% if platforms.any? %>
  <div class="overflow-x-auto">
    <table class="table table-zebra table-hover">
      <thead>
        <tr>
          <th>
            <%= link_to admin_games_platforms_path(sort: "name", q: params[:q]), data: { turbo_frame: "platforms_table" }, class: "link link-hover" do %>
              Name
            <% end %>
          </th>
          <th>Abbreviation</th>
          <th>
            <%= link_to admin_games_platforms_path(sort: "platform_family", q: params[:q]), data: { turbo_frame: "platforms_table" }, class: "link link-hover" do %>
              Family
            <% end %>
          </th>
          <th>Games</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% platforms.each do |platform| %>
          <tr>
            <td>
              <div class="font-bold">
                <%= link_to platform.name, admin_games_platform_path(platform),
                    class: "link link-hover",
                    data: { turbo_frame: "_top" } %>
              </div>
            </td>
            <td>
              <% if platform.abbreviation.present? %>
                <span class="badge badge-ghost badge-sm"><%= platform.abbreviation %></span>
              <% else %>
                <span class="text-base-content/30">-</span>
              <% end %>
            </td>
            <td>
              <% if platform.platform_family.present? %>
                <span class="badge badge-outline badge-sm"><%= platform.platform_family.titleize %></span>
              <% else %>
                <span class="text-base-content/30">-</span>
              <% end %>
            </td>
            <td>
              <span class="badge badge-outline badge-sm"><%= platform.games.count %></span>
            </td>
            <td>
              <div class="flex justify-end gap-1">
                <%= link_to admin_games_platform_path(platform),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "View" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <%= link_to edit_admin_games_platform_path(platform),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "Edit" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                <% end %>
                <%= button_to admin_games_platform_path(platform),
                    method: :delete,
                    class: "btn btn-ghost btn-xs text-error",
                    title: "Delete",
                    data: { turbo_confirm: "Are you sure you want to delete #{platform.name}?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if defined?(pagy) && pagy %>
    <div class="flex justify-center py-4 border-t border-base-300">
      <%== pagy.series_nav if pagy.pages > 1 %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="py-12 text-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
    <h3 class="mt-4 text-lg font-semibold">No platforms found</h3>
    <p class="mt-2 text-sm text-base-content/70">
      <% if params[:q].present? %>
        Try adjusting your search or <%= link_to "clear filters", admin_games_platforms_path, class: "link link-primary" %>.
      <% else %>
        Get started by creating your first platform.
      <% end %>
    </p>
    <% if params[:q].blank? %>
      <div class="mt-6">
        <%= link_to new_admin_games_platform_path, class: "btn btn-primary", data: { turbo_frame: "_top" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          <span>New Platform</span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
