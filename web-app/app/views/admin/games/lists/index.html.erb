<% content_for :title, "Game Lists" %>

<div class="space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold">Game Lists</h1>
      <p class="text-sm text-base-content/70 mt-1">Manage game lists and their rankings</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_admin_games_list_path, class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <span>New List</span>
      <% end %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="mb-4" data-controller="admin--search" data-admin--search-debounce-value="300">
        <%= form_with url: admin_games_lists_path, method: :get, data: { turbo_frame: "lists_table", turbo_action: "advance", admin__search_target: "form" }, class: "flex flex-col sm:flex-row gap-4 sm:items-center" do |f| %>
          <label class="input input-bordered flex items-center gap-2">
            <%= f.text_field :q, value: @search_query,
                placeholder: "Search by name or source...",
                class: "grow",
                autocomplete: "off",
                data: { admin__search_target: "input", action: "input->admin--search#search" } %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 opacity-70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </label>
          <%= f.select :status,
              options_for_select([
                ["All Statuses", "all"],
                ["Unapproved", "unapproved"],
                ["Approved", "approved"],
                ["Rejected", "rejected"],
                ["Active", "active"]
              ], @selected_status),
              {},
              class: "select select-bordered",
              onchange: "this.form.requestSubmit()" %>
        <% end %>
      </div>

      <%= turbo_frame_tag "lists_table" do %>
        <%= render "table", lists: @lists, pagy: @pagy, selected_status: @selected_status, search_query: @search_query %>
      <% end %>
    </div>
  </div>
</div>
