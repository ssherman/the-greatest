<% content_for :title, @user.email %>

<div class="space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <%= link_to admin_users_path, class: "btn btn-ghost btn-sm btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= @user.email %></h1>
      </div>
      <div class="flex items-center gap-4 text-sm text-base-content/70">
        <span>ID: <span class="font-mono"><%= @user.id %></span></span>
        <span>Joined <%= time_ago_in_words(@user.created_at) %> ago</span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_user_path(@user), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <%= button_to admin_user_path(@user),
          method: :delete,
          class: "btn btn-error btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete #{@user.email}? This will also delete their ranking configurations, penalties, and AI chats. This cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Profile Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% if @user.photo_url.present? %>
              <div class="md:col-span-2 flex items-center gap-4">
                <div class="avatar">
                  <div class="w-20 rounded-full">
                    <%= image_tag @user.photo_url, alt: "Profile photo" %>
                  </div>
                </div>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold">Profile Photo</span>
                  </label>
                  <p class="text-sm text-base-content/70 break-all"><%= @user.photo_url %></p>
                </div>
              </div>
            <% end %>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Email</span>
              </label>
              <p class="text-lg"><%= @user.email %></p>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Display Name</span>
              </label>
              <% if @user.display_name.present? %>
                <p class="text-lg"><%= @user.display_name %></p>
              <% else %>
                <span class="badge badge-ghost">Not set</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Full Name</span>
              </label>
              <% if @user.name.present? %>
                <p class="text-lg"><%= @user.name %></p>
              <% else %>
                <span class="badge badge-ghost">Not set</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Role</span>
              </label>
              <%
                role_badge_class = case @user.role
                when "admin"
                  "badge-error"
                when "editor"
                  "badge-warning"
                else
                  "badge-ghost"
                end
              %>
              <span class="badge <%= role_badge_class %> badge-lg">
                <%= @user.role.humanize %>
              </span>
            </div>
          </div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Authentication Details</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Sign-in Provider</span>
              </label>
              <% if @user.external_provider.present? %>
                <span class="badge badge-info badge-lg"><%= @user.external_provider.humanize %></span>
              <% else %>
                <span class="badge badge-ghost badge-lg">Unknown</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Email Verified</span>
              </label>
              <% if @user.email_verified? %>
                <span class="badge badge-success badge-lg">Verified</span>
              <% else %>
                <span class="badge badge-warning badge-lg">Not Verified</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Original Signup Domain</span>
              </label>
              <% if @user.original_signup_domain.present? %>
                <p><%= @user.original_signup_domain %></p>
              <% else %>
                <span class="badge badge-ghost">Unknown</span>
              <% end %>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Email Confirmed At</span>
              </label>
              <% if @user.confirmed_at.present? %>
                <p class="text-base-content/70"><%= @user.confirmed_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <% else %>
                <span class="badge badge-ghost">Not confirmed</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Activity</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Sign-in Count</span>
              </label>
              <p class="text-2xl font-bold"><%= @user.sign_in_count || 0 %></p>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Last Sign In</span>
              </label>
              <% if @user.last_sign_in_at.present? %>
                <p class="text-base-content/70"><%= @user.last_sign_in_at.strftime("%B %d, %Y at %I:%M %p") %></p>
              <% else %>
                <span class="badge badge-ghost">Never</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <% if @user.stripe_customer_id.present? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">Billing</h2>
            <div>
              <label class="label">
                <span class="label-text font-semibold">Stripe Customer ID</span>
              </label>
              <p class="font-mono text-sm"><%= @user.stripe_customer_id %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="space-y-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-lg">Metadata</h2>
          <div class="space-y-3 text-sm">
            <div>
              <label class="label-text font-semibold">ID</label>
              <p class="text-base-content/70 font-mono"><%= @user.id %></p>
            </div>
            <div>
              <label class="label-text font-semibold">Created At</label>
              <p class="text-base-content/70"><%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
            <div>
              <label class="label-text font-semibold">Updated At</label>
              <p class="text-base-content/70"><%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-lg">Related Data</h2>
          <div class="space-y-3 text-sm">
            <div class="flex justify-between items-center">
              <span>Ranking Configurations</span>
              <span class="badge badge-lg"><%= @user.ranking_configurations.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span>Penalties</span>
              <span class="badge badge-lg"><%= @user.penalties.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span>AI Chats</span>
              <span class="badge badge-lg"><%= @user.ai_chats.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span>Submitted Lists</span>
              <span class="badge badge-lg"><%= @user.submitted_lists.count %></span>
            </div>
            <div class="flex justify-between items-center">
              <span>Submitted External Links</span>
              <span class="badge badge-lg"><%= @user.submitted_external_links.count %></span>
            </div>
          </div>
          <div class="mt-4 text-xs text-base-content/50">
            Deleting this user will destroy their ranking configurations, penalties, and AI chats. Submitted lists and external links will remain but be disassociated from this user.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
