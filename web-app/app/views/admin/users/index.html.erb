<% content_for :title, "Users" %>

<div class="space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold">Users</h1>
      <p class="text-sm text-base-content/70 mt-1">Manage user accounts across all domains</p>
    </div>
  </div>

  <div class="card bg-base-100 shadow-sm">
    <div class="card-body">
      <%= render Admin::SearchComponent.new(
        url: admin_users_path,
        placeholder: "Search users by email...",
        value: params[:q],
        turbo_frame: "users_table"
      ) %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <%= turbo_frame_tag "users_table" do %>
        <%= render "table", users: @users, pagy: @pagy %>
      <% end %>
    </div>
  </div>
</div>
