<% if users.any? %>
  <div class="overflow-x-auto">
    <table class="table table-zebra table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>Display Name</th>
          <th>Role</th>
          <th>Last Sign In</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td class="font-mono text-sm">
              <%= link_to user.id, admin_user_path(user),
                  class: "link link-hover",
                  data: { turbo_frame: "_top" } %>
            </td>
            <td>
              <div class="font-bold">
                <%= link_to user.email, admin_user_path(user),
                    class: "link link-hover",
                    data: { turbo_frame: "_top" } %>
              </div>
            </td>
            <td>
              <% if user.display_name.present? %>
                <%= user.display_name %>
              <% else %>
                <span class="text-base-content/50">-</span>
              <% end %>
            </td>
            <td>
              <%
                role_badge_class = case user.role
                when "admin"
                  "badge-error"
                when "editor"
                  "badge-warning"
                else
                  "badge-ghost"
                end
              %>
              <span class="badge <%= role_badge_class %> badge-sm">
                <%= user.role.humanize %>
              </span>
            </td>
            <td class="text-sm text-base-content/70">
              <% if user.last_sign_in_at.present? %>
                <%= time_tag user.last_sign_in_at, user.last_sign_in_at.strftime("%b %d, %Y") %>
              <% else %>
                <span class="text-base-content/50">Never</span>
              <% end %>
            </td>
            <td>
              <div class="flex justify-end gap-1">
                <%= link_to admin_user_path(user),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "View" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <%= link_to edit_admin_user_path(user),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "Edit" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                <% end %>
                <%= button_to admin_user_path(user),
                    method: :delete,
                    class: "btn btn-ghost btn-xs text-error",
                    title: "Delete",
                    data: { turbo_confirm: "Are you sure you want to delete #{user.email}? This will also delete their ranking configurations, penalties, and AI chats." } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if defined?(pagy) && pagy %>
    <div class="flex justify-center py-4 border-t border-base-300">
      <%== pagy_nav(pagy, params: { q: params[:q] }.compact) if pagy.pages > 1 %>
    </div>
  <% end %>
<% else %>
  <div class="py-12 text-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
    </svg>
    <% if params[:q].present? %>
      <h3 class="mt-4 text-lg font-semibold">No users found</h3>
      <p class="mt-2 text-sm text-base-content/70">
        Try adjusting your search or <%= link_to "clear filters", admin_users_path, class: "link link-primary" %>.
      </p>
    <% else %>
      <h3 class="mt-4 text-lg font-semibold">No users found</h3>
      <p class="mt-2 text-sm text-base-content/70">
        Users are created when they sign in via Firebase authentication.
      </p>
    <% end %>
  </div>
<% end %>
