<% if penalties.any? %>
  <div class="overflow-x-auto">
    <table class="table table-zebra table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Type</th>
          <th>Dynamic Type</th>
          <th>User</th>
          <th>Created</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% penalties.each do |penalty| %>
          <tr>
            <td class="font-mono text-sm">
              <%= link_to penalty.id, admin_penalty_path(penalty),
                  class: "link link-hover",
                  data: { turbo_frame: "_top" } %>
            </td>
            <td>
              <div class="font-bold">
                <%= link_to penalty.name, admin_penalty_path(penalty),
                    class: "link link-hover",
                    data: { turbo_frame: "_top" } %>
              </div>
            </td>
            <td>
              <%
                type_badge_class = case penalty.type
                when "Global::Penalty"
                  "badge-info"
                when "Music::Penalty"
                  "badge-secondary"
                when "Books::Penalty"
                  "badge-success"
                when "Movies::Penalty"
                  "badge-warning"
                when "Games::Penalty"
                  "badge-error"
                else
                  "badge-ghost"
                end
              %>
              <span class="badge <%= type_badge_class %> badge-sm">
                <%= penalty.type.split("::").first %>
              </span>
            </td>
            <td>
              <% if penalty.dynamic_type.present? %>
                <span class="badge badge-warning badge-sm">
                  <%= penalty.dynamic_type.humanize %>
                </span>
              <% else %>
                <span class="badge badge-ghost badge-sm">Static</span>
              <% end %>
            </td>
            <td>
              <% if penalty.user_id.nil? %>
                <span class="badge badge-ghost badge-sm">System-wide</span>
              <% else %>
                <%= link_to penalty.user.email, "#",
                    class: "link link-primary text-sm" %>
              <% end %>
            </td>
            <td class="text-sm text-base-content/70">
              <%= time_tag penalty.created_at, penalty.created_at.strftime("%b %d, %Y") %>
            </td>
            <td>
              <div class="flex justify-end gap-1">
                <%= link_to admin_penalty_path(penalty),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "View" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <%= link_to edit_admin_penalty_path(penalty),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "Edit" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                <% end %>
                <%= button_to admin_penalty_path(penalty),
                    method: :delete,
                    class: "btn btn-ghost btn-xs text-error",
                    title: "Delete",
                    data: { turbo_confirm: "Are you sure you want to delete #{penalty.name}?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if defined?(pagy) && pagy %>
    <div class="flex justify-center py-4 border-t border-base-300">
      <%== pagy.series_nav(querify: ->(p) { p.merge!('type' => selected_type) if selected_type.present? }) if pagy.pages > 1 %>
    </div>
  <% end %>
<% else %>
  <div class="py-12 text-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
    </svg>
    <% if selected_type.present? && selected_type != "All" %>
      <h3 class="mt-4 text-lg font-semibold">No penalties found for type: <%= selected_type %></h3>
      <p class="mt-2 text-sm text-base-content/70">
        Try selecting a different type filter or create a new penalty.
      </p>
      <div class="mt-6">
        <%= link_to admin_penalties_path, class: "link link-primary" do %>
          Clear Filter
        <% end %>
      </div>
    <% else %>
      <h3 class="mt-4 text-lg font-semibold">No penalties found</h3>
      <p class="mt-2 text-sm text-base-content/70">
        Get started by creating your first penalty.
      </p>
      <div class="mt-6">
        <%= link_to new_admin_penalty_path, class: "btn btn-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          <span>New Penalty</span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
