<%= turbo_frame_tag "list_items_list" do %>
  <% list = local_assigns.fetch(:list, @list) %>
  <% list_items = local_assigns.fetch(:list_items, @list_items) %>
  <% if list_items&.any? %>
    <div class="overflow-x-auto">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Position</th>
            <th>Title</th>
            <% if list.class.name.start_with?("Music::") %>
              <th>Artists</th>
              <th>Year</th>
            <% end %>
            <th>Verified</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% list_items.each do |list_item| %>
            <tr>
              <td><%= list_item.position %></td>
              <td>
                <% if list_item.listable %>
                  <% if list_item.listable_type == "Music::Album" %>
                    <%= link_to_admin_album(list_item.listable) %>
                  <% elsif list_item.listable_type == "Music::Song" %>
                    <%= link_to_admin_song(list_item.listable) %>
                  <% else %>
                    <%= list_item.listable.respond_to?(:title) ? list_item.listable.title : list_item.listable.name %>
                  <% end %>
                <% else %>
                  <span class="text-base-content/50">Unverified Item</span>
                <% end %>
              </td>
              <% if list.class.name.start_with?("Music::") %>
                <td>
                  <% if list_item.listable&.respond_to?(:artists) && list_item.listable.artists.any? %>
                    <%= link_to_admin_artists(list_item.listable.artists) %>
                  <% end %>
                </td>
                <td>
                  <% if list_item.listable&.respond_to?(:release_year) %>
                    <%= list_item.listable.release_year %>
                  <% end %>
                </td>
              <% end %>
              <td>
                <% if list_item.verified %>
                  <span class="badge badge-success badge-sm">Verified</span>
                <% else %>
                  <span class="badge badge-warning badge-sm">Unverified</span>
                <% end %>
              </td>
              <td>
                <div class="join">
                  <button class="btn btn-primary btn-xs join-item" onclick="edit_list_item_modal_dialog_<%= list_item.id %>.showModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                  </button>
                  <%= button_to admin_list_item_path(list_item),
                      method: :delete,
                      class: "btn btn-error btn-xs join-item",
                      form: { data: { turbo_confirm: "Are you sure you want to remove this item from the list?" } } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Render edit modals for each list item %>
    <% list_items.each do |list_item| %>
      <%= render Admin::EditListItemModalComponent.new(list_item: list_item) %>
    <% end %>
  <% else %>
    <div class="py-8 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <p class="mt-4 text-sm text-base-content/70">
        No items in this list yet.
      </p>
    </div>
  <% end %>
<% end %>
