<div class="relative group">
  <% if image.file.attached? %>
    <%= image_tag image.file.variant(:medium),
        alt: image.notes.presence || "Image",
        class: "rounded-lg w-full aspect-square object-cover" %>
  <% else %>
    <div class="rounded-lg w-full aspect-square bg-base-200 flex items-center justify-center">
      <span class="text-base-content/40">No file</span>
    </div>
  <% end %>

  <% if image.primary? %>
    <span class="badge badge-primary badge-sm absolute top-2 left-2">Primary</span>
  <% end %>

  <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center gap-1">
    <% unless image.primary? %>
      <%= button_to set_primary_admin_image_path(image),
          method: :post,
          class: "btn btn-xs btn-primary",
          title: "Set as primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
      <% end %>
    <% end %>

    <button type="button"
            class="btn btn-xs"
            onclick="edit_image_<%= image.id %>_modal.showModal()"
            title="Edit">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
      </svg>
    </button>

    <%= button_to admin_image_path(image),
        method: :delete,
        class: "btn btn-xs btn-error",
        title: "Delete",
        data: { turbo_confirm: "Delete this image?" } do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
      </svg>
    <% end %>
  </div>
</div>

<!-- Edit Modal -->
<dialog id="edit_image_<%= image.id %>_modal" class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg">Edit Image</h3>

    <%= form_with model: image,
                  url: admin_image_path(image),
                  method: :patch,
                  class: "space-y-4 mt-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "edit_image_#{image.id}_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :notes, class: "label" do %>
          <span class="label-text font-semibold">Notes</span>
        <% end %>
        <%= f.text_area :notes,
            class: "textarea textarea-bordered w-full",
            rows: 3,
            placeholder: "Optional description or notes about this image" %>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :primary, class: "checkbox checkbox-primary" %>
          <span class="label-text">Set as primary image</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="edit_image_<%= image.id %>_modal.close()">Cancel</button>
        <%= f.submit "Save Changes", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
