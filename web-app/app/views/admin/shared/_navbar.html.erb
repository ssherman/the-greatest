<div class="navbar bg-base-100 shadow-sm">
  <!-- Mobile menu toggle -->
  <div class="flex-none lg:hidden">
    <label for="admin-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </label>
  </div>

  <!-- Page title area -->
  <div class="flex-1">
    <h2 class="text-xl font-semibold px-4">
      <%= content_for?(:page_title) ? yield(:page_title) : "Dashboard" %>
    </h2>
  </div>

  <!-- Action buttons area -->
  <div class="flex-none gap-2">
    <%= yield :navbar_actions if content_for?(:navbar_actions) %>
  </div>
</div>
