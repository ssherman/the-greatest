<%= turbo_frame_tag "penalty_applications_list" do %>
  <% penalty_applications = local_assigns.fetch(:penalty_applications, @penalty_applications) %>
  <% if penalty_applications&.any? %>
    <div class="overflow-x-auto">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Dynamic Type</th>
            <th>Value</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% penalty_applications.each do |penalty_application| %>
            <tr>
              <td>
                <%= link_to penalty_application.penalty.name,
                    admin_penalty_path(penalty_application.penalty),
                    class: "link link-hover",
                    data: { turbo_frame: "_top" } %>
              </td>
              <td>
                <% if penalty_application.penalty.type == "Global::Penalty" %>
                  <span class="badge badge-primary badge-sm">Global</span>
                <% elsif penalty_application.penalty.type.start_with?("Music::") %>
                  <span class="badge badge-secondary badge-sm">Music</span>
                <% elsif penalty_application.penalty.type.start_with?("Books::") %>
                  <span class="badge badge-accent badge-sm">Books</span>
                <% elsif penalty_application.penalty.type.start_with?("Movies::") %>
                  <span class="badge badge-info badge-sm">Movies</span>
                <% elsif penalty_application.penalty.type.start_with?("Games::") %>
                  <span class="badge badge-success badge-sm">Games</span>
                <% else %>
                  <span class="badge badge-ghost badge-sm"><%= penalty_application.penalty.type %></span>
                <% end %>
              </td>
              <td>
                <% if penalty_application.penalty.dynamic_type.blank? || penalty_application.penalty.dynamic_type == "static" %>
                  <span class="badge badge-ghost badge-sm">Static</span>
                <% elsif penalty_application.penalty.dynamic_type == "number_of_voters" %>
                  <span class="badge badge-ghost badge-sm">Number of Voters</span>
                <% elsif penalty_application.penalty.dynamic_type == "percentage_western" %>
                  <span class="badge badge-ghost badge-sm">Percentage Western</span>
                <% elsif penalty_application.penalty.dynamic_type == "voter_names_unknown" %>
                  <span class="badge badge-ghost badge-sm">Voter Names Unknown</span>
                <% else %>
                  <span class="badge badge-ghost badge-sm"><%= penalty_application.penalty.dynamic_type.titleize %></span>
                <% end %>
              </td>
              <td>
                <%= penalty_application.value %>%
              </td>
              <td>
                <div class="join">
                  <button class="btn btn-primary btn-xs join-item" onclick="edit_penalty_application_modal_dialog_<%= penalty_application.id %>.showModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                  </button>
                  <%= button_to admin_penalty_application_path(penalty_application),
                      method: :delete,
                      class: "btn btn-error btn-xs join-item",
                      form: { data: { turbo_confirm: "Are you sure you want to detach this penalty?" } } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Render edit modals for each penalty application %>
    <% penalty_applications.each do |penalty_application| %>
      <%= render Admin::EditPenaltyApplicationModalComponent.new(penalty_application: penalty_application) %>
    <% end %>
  <% else %>
    <div class="py-8 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <p class="mt-4 text-sm text-base-content/70">
        No penalties attached to this ranking configuration yet.
      </p>
    </div>
  <% end %>
<% end %>
