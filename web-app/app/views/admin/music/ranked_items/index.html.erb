<%= turbo_frame_tag "ranked_items_list" do %>
  <% if @ranked_items.any? %>
    <div class="overflow-x-auto">
      <table class="table table-sm">
        <thead>
          <tr>
            <th>Rank</th>
            <th>Item</th>
            <th>Score</th>
          </tr>
        </thead>
        <tbody>
          <% @ranked_items.each do |ranked_item| %>
            <tr>
              <td class="font-bold">
                <span class="badge badge-ghost"><%= ranked_item.rank %></span>
              </td>
              <td>
                <% if ranked_item.item.present? %>
                  <% if @ranking_configuration.type == "Music::Albums::RankingConfiguration" %>
                    <%= link_to ranked_item.item.title,
                        admin_album_path(ranked_item.item),
                        class: "link link-hover",
                        data: { turbo_frame: "_top" } %>
                    <% if ranked_item.item.artists.any? %>
                      <span class="text-sm text-base-content/70">
                        by
                        <%= ranked_item.item.artists.map { |artist|
                          link_to artist.name, admin_artist_path(artist), class: "link link-hover", data: { turbo_frame: "_top" }
                        }.join(', ').html_safe %>
                      </span>
                    <% end %>
                  <% elsif @ranking_configuration.type == "Music::Songs::RankingConfiguration" %>
                    <%= link_to ranked_item.item.title,
                        admin_song_path(ranked_item.item),
                        class: "link link-hover",
                        data: { turbo_frame: "_top" } %>
                    <% if ranked_item.item.artists.any? %>
                      <span class="text-sm text-base-content/70">
                        by
                        <%= ranked_item.item.artists.map { |artist|
                          link_to artist.name, admin_artist_path(artist), class: "link link-hover", data: { turbo_frame: "_top" }
                        }.join(', ').html_safe %>
                      </span>
                    <% end %>
                  <% elsif @ranking_configuration.type == "Music::Artists::RankingConfiguration" %>
                    <%= link_to ranked_item.item.name,
                        admin_artist_path(ranked_item.item),
                        class: "link link-hover",
                        data: { turbo_frame: "_top" } %>
                  <% else %>
                    <%= ranked_item.item.try(:name) || ranked_item.item.try(:title) || "Item ##{ranked_item.item_id}" %>
                  <% end %>
                <% else %>
                  <span class="text-base-content/50">Item #<%= ranked_item.item_id %> (deleted)</span>
                <% end %>
              </td>
              <td>
                <span class="font-mono text-sm"><%= number_with_precision(ranked_item.score, precision: 2) %></span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy && @pagy.pages > 1 %>
      <div class="flex justify-center py-4 border-t border-base-300">
        <%== pagy_nav(@pagy, link_extra: 'data-turbo-frame="ranked_items_list"') %>
      </div>
    <% end %>
  <% else %>
    <div class="py-8 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      <p class="mt-4 text-sm text-base-content/70">
        No rankings calculated yet. Click "Refresh Rankings" to calculate.
      </p>
    </div>
  <% end %>
<% end %>
