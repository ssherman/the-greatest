<%= form_with model: @category, url: @category.persisted? ? admin_category_path(@category) : admin_categories_path, class: "space-y-6" do |f| %>
  <!-- Error Messages -->
  <% if @category.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold"><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Basic Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Name -->
        <div class="form-control md:col-span-2">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-semibold">Name <span class="text-error">*</span></span>
          <% end %>
          <%= f.text_field :name,
              class: "input input-bordered w-full #{@category.errors[:name].any? ? 'input-error' : ''}",
              placeholder: "Enter category name",
              required: true,
              autofocus: true %>
          <% if @category.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @category.errors[:name].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Category Type -->
        <div class="form-control">
          <%= f.label :category_type, class: "label" do %>
            <span class="label-text font-semibold">Category Type <span class="text-error">*</span></span>
          <% end %>
          <%= f.select :category_type,
              Category.category_types.keys.map { |t| [t.titleize, t] },
              { include_blank: "Select type..." },
              class: "select select-bordered w-full #{@category.errors[:category_type].any? ? 'select-error' : ''}",
              required: true %>
          <% if @category.errors[:category_type].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @category.errors[:category_type].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Parent Category -->
        <div class="form-control">
          <%= f.label :parent_id, class: "label" do %>
            <span class="label-text font-semibold">Parent Category</span>
          <% end %>
          <%= f.select :parent_id,
              Music::Category.active.where.not(id: @category.id).sorted_by_name.map { |c| [c.name, c.id] },
              { include_blank: "None (top-level category)" },
              class: "select select-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt">Optional: Select a parent to create a subcategory</span>
          </label>
        </div>

        <!-- Description -->
        <div class="form-control md:col-span-2">
          <%= f.label :description, class: "label" do %>
            <span class="label-text font-semibold">Description</span>
          <% end %>
          <%= f.text_area :description,
              class: "textarea textarea-bordered w-full h-32 #{@category.errors[:description].any? ? 'textarea-error' : ''}",
              placeholder: "Enter a description for this category..." %>
          <% if @category.errors[:description].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @category.errors[:description].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-2 justify-end">
    <%= link_to "Cancel", @category.persisted? ? admin_category_path(@category) : admin_categories_path, class: "btn btn-ghost" %>
    <%= f.submit @category.persisted? ? "Update Category" : "Create Category", class: "btn btn-primary" %>
  </div>
<% end %>
