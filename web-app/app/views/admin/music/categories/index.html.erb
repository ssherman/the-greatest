<% content_for :title, "Categories" %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold">Categories</h1>
      <p class="text-sm text-base-content/70 mt-1">Manage music genres, locations, and subjects</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <span>New Category</span>
      <% end %>
    </div>
  </div>

  <!-- Search -->
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body">
      <%= render Admin::SearchComponent.new(
        url: admin_categories_path,
        placeholder: "Search categories by name...",
        value: params[:q],
        turbo_frame: "categories_table"
      ) %>
    </div>
  </div>

  <!-- Categories Table -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <%= turbo_frame_tag "categories_table" do %>
        <%= render "table", categories: @categories, pagy: @pagy %>
      <% end %>
    </div>
  </div>
</div>
