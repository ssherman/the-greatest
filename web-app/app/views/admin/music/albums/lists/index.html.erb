<% content_for :title, "Album Lists" %>

<div class="space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold">Album Lists</h1>
      <p class="text-sm text-base-content/70 mt-1">Manage album lists and their rankings</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_admin_albums_list_path, class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        <span>New Album List</span>
      <% end %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <%= turbo_frame_tag "lists_table" do %>
        <%= render "table", lists: @lists, pagy: @pagy %>
      <% end %>
    </div>
  </div>
</div>
