<% content_for :title, @album.title %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <%= link_to admin_albums_path, class: "btn btn-ghost btn-sm btn-circle", data: { testid: "back-button" } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= @album.title %></h1>
      </div>
      <div class="flex items-center gap-4 text-sm text-base-content/70">
        <span>ID: <span class="font-mono"><%= @album.id %></span></span>
        <span>Created <%= time_ago_in_words(@album.created_at) %> ago</span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_album_path(@album), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <!-- Execute Action Dropdown -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline">
          Actions
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-box w-52">
          <li>
            <%= button_to "Generate AI Description",
                execute_action_admin_album_path(@album, action_name: "GenerateAlbumDescription"),
                method: :post,
                class: "text-left",
                data: { turbo_confirm: "Generate AI description for this album?" } %>
          </li>
          <li>
            <button type="button"
                    class="text-left"
                    onclick="document.getElementById('merge-album-modal').showModal()">
              Merge Another Album
            </button>
          </li>
        </ul>
      </div>

      <%= button_to admin_album_path(@album),
          method: :delete,
          class: "btn btn-error btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete #{@album.title}? This cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Basic Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Title</span>
              </label>
              <p class="text-lg"><%= @album.title %></p>
            </div>

            <% if @album.release_year.present? %>
              <div>
                <label class="label">
                  <span class="label-text font-semibold">Release Year</span>
                </label>
                <p><%= @album.release_year %></p>
              </div>
            <% end %>

            <% if @album.slug.present? %>
              <div class="md:col-span-2">
                <label class="label">
                  <span class="label-text font-semibold">Slug</span>
                </label>
                <p class="font-mono text-sm text-base-content/70"><%= @album.slug %></p>
              </div>
            <% end %>

            <% if @album.description.present? %>
              <div class="md:col-span-2">
                <label class="label">
                  <span class="label-text font-semibold">Description</span>
                </label>
                <p class="whitespace-pre-wrap"><%= @album.description %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Artists Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Artists
              <div class="badge badge-primary"><%= @album.album_artists.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_artist_modal.showModal()">
              + Add Artist
            </button>
          </div>

          <%= turbo_frame_tag "album_artists_list" do %>
            <%= render "artists_list", album: @album %>
          <% end %>
        </div>
      </div>

      <!-- Releases Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Releases
            <div class="badge badge-primary"><%= @album.releases.count %></div>
          </h2>

          <% if @album.releases.any? %>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Format</th>
                    <th>Status</th>
                    <th>Release Date</th>
                    <th>Country</th>
                  </tr>
                </thead>
                <tbody>
                  <% @album.releases.each do |release| %>
                    <tr>
                      <td><span class="badge badge-ghost badge-sm"><%= release.format&.titleize || '-' %></span></td>
                      <td><span class="badge badge-outline badge-sm"><%= release.status&.titleize || '-' %></span></td>
                      <td><%= release.release_date&.strftime("%b %d, %Y") || '-' %></td>
                      <td><%= release.country || '-' %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-base-content/50">No releases for this album yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Songs Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Songs
            <div class="badge badge-primary"><%= @album.releases.sum { |r| r.tracks.count } %></div>
          </h2>

          <% if @album.releases.any? %>
            <% @album.releases.each do |release| %>
              <% if release.tracks.any? %>
                <div class="mb-6">
                  <h3 class="text-lg font-semibold mb-2"><%= release.format.titleize %> - <%= release.status.titleize %></h3>

                  <div class="overflow-x-auto">
                    <table class="table table-zebra table-sm">
                      <thead>
                        <tr>
                          <th>Disc</th>
                          <th>Track</th>
                          <th>Title</th>
                          <th>Duration</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% release.tracks.ordered.includes(:song).each do |track| %>
                          <tr>
                            <td><%= track.medium_number %></td>
                            <td><%= track.position %></td>
                            <td>
                              <%= link_to track.song.title, admin_song_path(track.song),
                                          class: "link link-hover",
                                          data: { turbo_frame: "_top" } %>
                            </td>
                            <td><%= format_duration(track.length_secs || track.song.duration_secs) %></td>
                            <td>
                              <%= link_to "View", admin_song_path(track.song),
                                          class: "btn btn-xs btn-ghost",
                                          data: { turbo_frame: "_top" } %>
                            </td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <p class="text-base-content/50">No releases with tracks found for this album.</p>
          <% end %>
        </div>
      </div>

      <!-- Categories Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Categories
              <div class="badge badge-primary"><%= @album.categories.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_category_modal_dialog.showModal()">
              + Add Category
            </button>
          </div>

          <%= turbo_frame_tag "category_items_list", loading: :lazy,
              src: admin_album_category_items_path(@album) do %>
            <div class="flex justify-center py-8">
              <span class="loading loading-spinner loading-lg"></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Identifiers Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Identifiers
            <div class="badge badge-primary"><%= @album.identifiers.count %></div>
          </h2>

          <% if @album.identifiers.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @album.identifiers.each do |identifier| %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold"><%= identifier.identifier_type&.titleize %></span>
                  </label>
                  <p class="font-mono text-sm"><%= identifier.value %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No identifiers yet.</p>
          <% end %>
        </div>
      </div>

      <!-- External Links Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            External Links
            <div class="badge badge-primary"><%= @album.external_links.count %></div>
          </h2>

          <% if @album.external_links.any? %>
            <div class="flex flex-wrap gap-2">
              <% @album.external_links.each do |link| %>
                <%= link_to link.url, target: "_blank", rel: "noopener", class: "btn btn-sm btn-outline" do %>
                  <%= link.name || link.url %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No external links yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Images Management -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Images
              <span class="badge badge-ghost"><%= @album.images.count %></span>
            </h2>
            <button class="btn btn-primary btn-sm"
                    onclick="add_image_modal.showModal()">
              + Add
            </button>
          </div>

          <%= turbo_frame_tag "images_list", loading: :lazy,
              src: admin_album_images_path(@album) do %>
            <div class="flex justify-center py-4">
              <span class="loading loading-spinner loading-md"></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Metadata -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Metadata</h2>
          <div class="space-y-2 text-sm">
            <div>
              <span class="text-base-content/70">ID:</span>
              <span class="font-mono"><%= @album.id %></span>
            </div>
            <div>
              <span class="text-base-content/70">Created:</span>
              <span><%= @album.created_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
            <div>
              <span class="text-base-content/70">Updated:</span>
              <span><%= @album.updated_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Artist Modal -->
<dialog id="add_artist_modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Add Artist to Album</h3>
    <p class="py-4 text-sm text-gray-500">
      Search for an artist to associate with this album. You can set the position to control artist ordering.
    </p>

    <%= form_with model: Music::AlbumArtist.new,
                  url: admin_album_album_artists_path(@album),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_artist_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :album_id, "Album", class: "label" do %>
          <span class="label-text font-semibold">Album</span>
        <% end %>
        <%= f.text_field :album_id,
            value: @album.title,
            disabled: true,
            class: "input input-bordered input-disabled w-full" %>
        <%= f.hidden_field :album_id, value: @album.id %>
      </div>

      <div class="form-control">
        <%= f.label :artist_id, "Artist", class: "label" do %>
          <span class="label-text font-semibold">Artist <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "music_album_artist[artist_id]",
          url: search_admin_artists_path,
          placeholder: "Search for artist...",
          required: true
        ) %>
      </div>

      <div class="form-control">
        <%= f.label :position, class: "label" do %>
          <span class="label-text font-semibold">Position</span>
        <% end %>
        <%= f.number_field :position,
            value: @album.album_artists.maximum(:position).to_i + 1,
            min: 1,
            class: "input input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Position in artist ordering (1 = first artist)</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_artist_modal.close()">Cancel</button>
        <%= f.submit "Add Artist", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Merge Album Modal -->
<dialog id="merge-album-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Merge Another Album Into This One</h3>
    <p class="py-4">
      Search for a duplicate album to merge into the current album.
      All releases, identifiers, and other associations will be transferred.
      The source album will be permanently deleted after merging.
    </p>

    <%= form_with url: execute_action_admin_album_path(@album),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "merge-album-modal"
                  } do |f| %>
      <%= f.hidden_field :action_name, value: "MergeAlbum" %>

      <div class="form-control">
        <%= f.label :source_album_id, "Source Album (to be deleted)", class: "label" do %>
          <span class="label-text font-semibold">Source Album <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "source_album_id",
          url: search_admin_albums_path(exclude_id: @album.id),
          placeholder: "Search for album to merge...",
          required: true
        ) %>
        <label class="label">
          <span class="label-text-alt">Search for the duplicate album you want to merge into this one</span>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :confirm_merge, class: "checkbox", required: true %>
          <span class="label-text">I understand this action cannot be undone</span>
        </label>
        <label class="label">
          <span class="label-text-alt text-warning">The source album will be permanently deleted after merging</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="document.getElementById('merge-album-modal').close()">Cancel</button>
        <%= f.submit "Merge Album", class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Add Category Modal -->
<%= render Admin::AddCategoryModalComponent.new(item: @album) %>

<!-- Add Image Modal -->
<dialog id="add_image_modal" class="modal">
  <div class="modal-box">
    <h3 class="font-bold text-lg">Add Image</h3>
    <p class="py-2 text-sm text-base-content/70">
      Upload an image for this album. Supported formats: JPEG, PNG, WebP, GIF.
    </p>

    <%= form_with model: Image.new,
                  url: admin_album_images_path(@album),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_image_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :file, class: "label" do %>
          <span class="label-text font-semibold">Image File <span class="text-error">*</span></span>
        <% end %>
        <%= f.file_field :file,
            accept: "image/jpeg,image/png,image/webp,image/gif",
            class: "file-input file-input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Max recommended size: 10MB</span>
        </label>
      </div>

      <div class="form-control">
        <%= f.label :notes, class: "label" do %>
          <span class="label-text font-semibold">Notes</span>
        <% end %>
        <%= f.text_area :notes,
            class: "textarea textarea-bordered w-full",
            rows: 2,
            placeholder: "Optional description or notes about this image" %>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :primary, class: "checkbox checkbox-primary" %>
          <span class="label-text">Set as primary image</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_image_modal.close()">Cancel</button>
        <%= f.submit "Upload Image", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
