<% content_for :title, @album.title %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <%= link_to admin_albums_path, class: "btn btn-ghost btn-sm btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= @album.title %></h1>
      </div>
      <div class="flex items-center gap-4 text-sm text-base-content/70">
        <span>ID: <span class="font-mono"><%= @album.id %></span></span>
        <span>Created <%= time_ago_in_words(@album.created_at) %> ago</span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_album_path(@album), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <!-- Execute Action Dropdown -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline">
          Actions
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-box w-52">
          <li>
            <%= button_to "Generate AI Description",
                execute_action_admin_album_path(@album, action_name: "GenerateAlbumDescription"),
                method: :post,
                class: "text-left",
                data: { turbo_confirm: "Generate AI description for this album?" } %>
          </li>
          <li>
            <%= link_to "#", class: "text-left", data: { action: "click->modal#open", modal_target_value: "merge-album-modal" } do %>
              Merge Another Album
            <% end %>
          </li>
        </ul>
      </div>

      <%= button_to admin_album_path(@album),
          method: :delete,
          class: "btn btn-error btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete #{@album.title}? This cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Basic Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Title</span>
              </label>
              <p class="text-lg"><%= @album.title %></p>
            </div>

            <% if @album.release_year.present? %>
              <div>
                <label class="label">
                  <span class="label-text font-semibold">Release Year</span>
                </label>
                <p><%= @album.release_year %></p>
              </div>
            <% end %>

            <% if @album.slug.present? %>
              <div class="md:col-span-2">
                <label class="label">
                  <span class="label-text font-semibold">Slug</span>
                </label>
                <p class="font-mono text-sm text-base-content/70"><%= @album.slug %></p>
              </div>
            <% end %>

            <% if @album.description.present? %>
              <div class="md:col-span-2">
                <label class="label">
                  <span class="label-text font-semibold">Description</span>
                </label>
                <p class="whitespace-pre-wrap"><%= @album.description %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Artists Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Artists
            <div class="badge badge-primary"><%= @album.artists.count %></div>
          </h2>

          <% if @album.album_artists.ordered.any? %>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Position</th>
                    <th>Name</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @album.album_artists.ordered.includes(:artist).each do |album_artist| %>
                    <tr>
                      <td><span class="badge badge-sm"><%= album_artist.position %></span></td>
                      <td>
                        <%= link_to album_artist.artist.name, admin_artist_path(album_artist.artist),
                            class: "link link-hover",
                            data: { turbo_frame: "_top" } %>
                      </td>
                      <td>
                        <%= link_to admin_artist_path(album_artist.artist),
                            class: "btn btn-ghost btn-xs",
                            data: { turbo_frame: "_top" },
                            title: "View Artist" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                          </svg>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-base-content/50">No artists associated with this album yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Releases Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Releases
            <div class="badge badge-primary"><%= @album.releases.count %></div>
          </h2>

          <% if @album.releases.any? %>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Format</th>
                    <th>Status</th>
                    <th>Release Date</th>
                    <th>Country</th>
                  </tr>
                </thead>
                <tbody>
                  <% @album.releases.each do |release| %>
                    <tr>
                      <td><span class="badge badge-ghost badge-sm"><%= release.format&.titleize || '-' %></span></td>
                      <td><span class="badge badge-outline badge-sm"><%= release.status&.titleize || '-' %></span></td>
                      <td><%= release.release_date&.strftime("%b %d, %Y") || '-' %></td>
                      <td><%= release.country || '-' %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-base-content/50">No releases for this album yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Categories Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Categories
            <div class="badge badge-primary"><%= @album.categories.count %></div>
          </h2>

          <% if @album.categories.any? %>
            <div class="flex flex-wrap gap-2">
              <% @album.categories.each do |category| %>
                <span class="badge badge-lg badge-outline"><%= category.name %></span>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No categories assigned yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Identifiers Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Identifiers
            <div class="badge badge-primary"><%= @album.identifiers.count %></div>
          </h2>

          <% if @album.identifiers.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <% @album.identifiers.each do |identifier| %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold"><%= identifier.identifier_type&.titleize %></span>
                  </label>
                  <p class="font-mono text-sm"><%= identifier.value %></p>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No identifiers yet.</p>
          <% end %>
        </div>
      </div>

      <!-- External Links Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            External Links
            <div class="badge badge-primary"><%= @album.external_links.count %></div>
          </h2>

          <% if @album.external_links.any? %>
            <div class="flex flex-wrap gap-2">
              <% @album.external_links.each do |link| %>
                <%= link_to link.url, target: "_blank", rel: "noopener", class: "btn btn-sm btn-outline" do %>
                  <%= link.name || link.url %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No external links yet.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Primary Image -->
      <% if @album.primary_image && @album.primary_image.file.attached? %>
        <div class="card bg-base-100 shadow-xl">
          <figure>
            <%= image_tag @album.primary_image.file.variant(resize_to_limit: [400, 400]),
                alt: @album.title,
                class: "w-full" %>
          </figure>
          <div class="card-body">
            <p class="text-sm text-base-content/70">Primary Image</p>
          </div>
        </div>
      <% end %>

      <!-- Images Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Images
            <div class="badge badge-primary"><%= @album.images.count %></div>
          </h2>

          <% if @album.images.any? %>
            <div class="grid grid-cols-2 gap-2">
              <% @album.images.first(6).each do |image| %>
                <% if image.file.attached? %>
                  <%= image_tag image.file.variant(resize_to_limit: [150, 150]),
                      alt: @album.title,
                      class: "w-full rounded" %>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No images yet.</p>
          <% end %>
        </div>
      </div>

      <!-- Metadata -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Metadata</h2>
          <div class="space-y-2 text-sm">
            <div>
              <span class="text-base-content/70">ID:</span>
              <span class="font-mono"><%= @album.id %></span>
            </div>
            <div>
              <span class="text-base-content/70">Created:</span>
              <span><%= @album.created_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
            <div>
              <span class="text-base-content/70">Updated:</span>
              <span><%= @album.updated_at.strftime("%b %d, %Y %I:%M %p") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Merge Album Modal -->
<dialog id="merge-album-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Merge Another Album Into This One</h3>
    <p class="py-4">
      Enter the ID of a duplicate album to merge into the current album.
      The source album will be permanently deleted after merging.
    </p>

    <%= form_with url: execute_action_admin_album_path(@album),
                  method: :post,
                  class: "space-y-4" do |f| %>
      <%= f.hidden_field :action_name, value: "MergeAlbum" %>

      <div class="form-control">
        <%= f.label :source_album_id, "Source Album ID (to be deleted)", class: "label" %>
        <%= f.number_field :source_album_id,
                          class: "input input-bordered w-full",
                          placeholder: "e.g., 123",
                          required: true %>
        <label class="label">
          <span class="label-text-alt">Enter the ID of the duplicate album</span>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :confirm_merge, class: "checkbox", required: true %>
          <span class="label-text">I understand this action cannot be undone</span>
        </label>
        <label class="label">
          <span class="label-text-alt">The source album will be permanently deleted after merging</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="document.getElementById('merge-album-modal').close()">Cancel</button>
        <%= f.submit "Merge Album", class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
