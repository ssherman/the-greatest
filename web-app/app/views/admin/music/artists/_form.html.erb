<%= form_with model: @artist, url: @artist.persisted? ? admin_artist_path(@artist) : admin_artists_path, class: "space-y-6" do |f| %>
  <!-- Error Messages -->
  <% if @artist.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold"><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @artist.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Basic Information</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Name -->
        <div class="form-control md:col-span-2">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-semibold">Name <span class="text-error">*</span></span>
          <% end %>
          <%= f.text_field :name,
              class: "input input-bordered w-full #{@artist.errors[:name].any? ? 'input-error' : ''}",
              placeholder: "Enter artist or band name",
              required: true,
              autofocus: true %>
          <% if @artist.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @artist.errors[:name].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Kind -->
        <div class="form-control">
          <%= f.label :kind, class: "label" do %>
            <span class="label-text font-semibold">Type <span class="text-error">*</span></span>
          <% end %>
          <%= f.select :kind,
              options_for_select(
                Music::Artist.kinds.map { |k, v| [k.titleize, k] },
                @artist.kind
              ),
              {},
              class: "select select-bordered w-full #{@artist.errors[:kind].any? ? 'select-error' : ''}",
              required: true %>
          <% if @artist.errors[:kind].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @artist.errors[:kind].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Country -->
        <div class="form-control">
          <%= f.label :country, class: "label" do %>
            <span class="label-text font-semibold">Country Code</span>
          <% end %>
          <%= f.text_field :country,
              class: "input input-bordered w-full #{@artist.errors[:country].any? ? 'input-error' : ''}",
              placeholder: "US",
              maxlength: 2,
              pattern: "[A-Z]{2}",
              title: "Two-letter country code (e.g., US, GB, CA)" %>
          <label class="label">
            <span class="label-text-alt">Two-letter ISO code (e.g., US, GB, CA)</span>
          </label>
          <% if @artist.errors[:country].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @artist.errors[:country].first %></span>
            </label>
          <% end %>
        </div>

        <!-- Person-specific fields -->
        <div id="person-fields" class="md:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4" style="<%= 'display: none;' unless @artist.person? %>">
          <!-- Born On -->
          <div class="form-control">
            <%= f.label :born_on, class: "label" do %>
              <span class="label-text font-semibold">Born On</span>
            <% end %>
            <%= f.date_field :born_on,
                class: "input input-bordered w-full #{@artist.errors[:born_on].any? ? 'input-error' : ''}" %>
            <% if @artist.errors[:born_on].any? %>
              <label class="label">
                <span class="label-text-alt text-error"><%= @artist.errors[:born_on].first %></span>
              </label>
            <% end %>
          </div>

          <!-- Year Died -->
          <div class="form-control">
            <%= f.label :year_died, class: "label" do %>
              <span class="label-text font-semibold">Year Died</span>
            <% end %>
            <%= f.number_field :year_died,
                class: "input input-bordered w-full #{@artist.errors[:year_died].any? ? 'input-error' : ''}",
                placeholder: "e.g., 2000",
                min: 1900,
                max: Time.current.year %>
            <% if @artist.errors[:year_died].any? %>
              <label class="label">
                <span class="label-text-alt text-error"><%= @artist.errors[:year_died].first %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Band-specific fields -->
        <div id="band-fields" class="md:col-span-2 grid grid-cols-1 md:grid-cols-2 gap-4" style="<%= 'display: none;' unless @artist.band? %>">
          <!-- Year Formed -->
          <div class="form-control">
            <%= f.label :year_formed, class: "label" do %>
              <span class="label-text font-semibold">Year Formed</span>
            <% end %>
            <%= f.number_field :year_formed,
                class: "input input-bordered w-full #{@artist.errors[:year_formed].any? ? 'input-error' : ''}",
                placeholder: "e.g., 1980",
                min: 1900,
                max: Time.current.year %>
            <% if @artist.errors[:year_formed].any? %>
              <label class="label">
                <span class="label-text-alt text-error"><%= @artist.errors[:year_formed].first %></span>
              </label>
            <% end %>
          </div>

          <!-- Year Disbanded -->
          <div class="form-control">
            <%= f.label :year_disbanded, class: "label" do %>
              <span class="label-text font-semibold">Year Disbanded</span>
            <% end %>
            <%= f.number_field :year_disbanded,
                class: "input input-bordered w-full #{@artist.errors[:year_disbanded].any? ? 'input-error' : ''}",
                placeholder: "e.g., 2010",
                min: 1900,
                max: Time.current.year %>
            <% if @artist.errors[:year_disbanded].any? %>
              <label class="label">
                <span class="label-text-alt text-error"><%= @artist.errors[:year_disbanded].first %></span>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Description -->
        <div class="form-control md:col-span-2">
          <%= f.label :description, class: "label" do %>
            <span class="label-text font-semibold">Description</span>
          <% end %>
          <%= f.text_area :description,
              class: "textarea textarea-bordered w-full h-32 #{@artist.errors[:description].any? ? 'textarea-error' : ''}",
              placeholder: "Enter a description of the artist..." %>
          <label class="label">
            <span class="label-text-alt">Biographical information, career highlights, notable achievements</span>
          </label>
          <% if @artist.errors[:description].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @artist.errors[:description].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex flex-col sm:flex-row gap-2 justify-end">
    <%= link_to "Cancel", @artist.persisted? ? admin_artist_path(@artist) : admin_artists_path, class: "btn btn-ghost" %>
    <%= f.submit @artist.persisted? ? "Update Artist" : "Create Artist", class: "btn btn-primary" %>
  </div>

  <!-- JavaScript for toggling person/band fields -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const kindSelect = document.querySelector('select[name="music_artist[kind]"]');
      const personFields = document.getElementById('person-fields');
      const bandFields = document.getElementById('band-fields');

      if (kindSelect) {
        kindSelect.addEventListener('change', function() {
          if (this.value === 'person') {
            personFields.style.display = 'grid';
            bandFields.style.display = 'none';
          } else {
            personFields.style.display = 'none';
            bandFields.style.display = 'grid';
          }
        });
      }
    });
  </script>
<% end %>
