<% content_for :title, @artist.name %>

<div class="space-y-6">
  <!-- Page Header -->
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2 mb-2">
        <%= link_to admin_artists_path, class: "btn btn-ghost btn-sm btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= @artist.name %></h1>
        <span class="badge <%= @artist.person? ? 'badge-primary' : 'badge-secondary' %>">
          <%= @artist.kind.titleize %>
        </span>
      </div>
      <div class="flex items-center gap-4 text-sm text-base-content/70">
        <span>ID: <span class="font-mono"><%= @artist.id %></span></span>
        <span>Created <%= time_ago_in_words(@artist.created_at) %> ago</span>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_artist_path(@artist), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <!-- Execute Action Dropdown -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline">
          Actions
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-box w-52">
          <li>
            <%= button_to "Generate AI Description",
                execute_action_admin_artist_path(@artist, action_name: "GenerateArtistDescription"),
                method: :post,
                class: "text-left",
                data: { turbo_confirm: "Generate AI description for this artist?" } %>
          </li>
          <li>
            <%= button_to "Refresh Artist Ranking",
                execute_action_admin_artist_path(@artist, action_name: "RefreshArtistRanking"),
                method: :post,
                class: "text-left" %>
          </li>
          <li>
            <button type="button"
                    class="text-left"
                    onclick="document.getElementById('merge-artist-modal').showModal()">
              Merge Another Artist
            </button>
          </li>
        </ul>
      </div>

      <%= button_to admin_artist_path(@artist),
          method: :delete,
          class: "btn btn-error btn-outline",
          data: { turbo_confirm: "Are you sure you want to delete #{@artist.name}? This cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Basic Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="label">
                <span class="label-text font-semibold">Name</span>
              </label>
              <p class="text-lg"><%= @artist.name %></p>
            </div>

            <div>
              <label class="label">
                <span class="label-text font-semibold">Type</span>
              </label>
              <span class="badge <%= @artist.person? ? 'badge-primary' : 'badge-secondary' %> badge-lg">
                <%= @artist.kind.titleize %>
              </span>
            </div>

            <% if @artist.country.present? %>
              <div>
                <label class="label">
                  <span class="label-text font-semibold">Country</span>
                </label>
                <p><%= @artist.country %></p>
              </div>
            <% end %>

            <% if @artist.person? %>
              <% if @artist.born_on.present? %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold">Born On</span>
                  </label>
                  <p><%= @artist.born_on.strftime("%B %d, %Y") %></p>
                </div>
              <% end %>

              <% if @artist.year_died.present? %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold">Year Died</span>
                  </label>
                  <p><%= @artist.year_died %></p>
                </div>
              <% end %>
            <% else %>
              <% if @artist.year_formed.present? %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold">Year Formed</span>
                  </label>
                  <p><%= @artist.year_formed %></p>
                </div>
              <% end %>

              <% if @artist.year_disbanded.present? %>
                <div>
                  <label class="label">
                    <span class="label-text font-semibold">Year Disbanded</span>
                  </label>
                  <p><%= @artist.year_disbanded %></p>
                </div>
              <% end %>
            <% end %>
          </div>

          <% if @artist.description.present? %>
            <div class="mt-4">
              <label class="label">
                <span class="label-text font-semibold">Description</span>
              </label>
              <p class="text-base-content/80 whitespace-pre-wrap"><%= @artist.description %></p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Albums Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Albums
              <div class="badge badge-primary"><%= @artist.album_artists.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_album_modal.showModal()">
              + Add Album
            </button>
          </div>

          <%= turbo_frame_tag "artist_albums_list" do %>
            <%= render "albums_list", artist: @artist %>
          <% end %>
        </div>
      </div>

      <!-- Songs Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Songs
              <div class="badge badge-primary"><%= @artist.song_artists.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_song_modal.showModal()">
              + Add Song
            </button>
          </div>

          <%= turbo_frame_tag "artist_songs_list" do %>
            <%= render "songs_list", artist: @artist %>
          <% end %>
        </div>
      </div>

      <!-- Categories Section -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Categories
              <div class="badge badge-primary"><%= @artist.categories.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_category_modal_dialog.showModal()">
              + Add Category
            </button>
          </div>

          <%= turbo_frame_tag "category_items_list", loading: :lazy,
              src: admin_artist_category_items_path(@artist) do %>
            <div class="flex justify-center py-8">
              <span class="loading loading-spinner loading-lg"></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Identifiers -->
      <% if @artist.identifiers.any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">
              External Identifiers
              <span class="badge badge-ghost"><%= @artist.identifiers.count %></span>
            </h2>
            <div class="overflow-x-auto">
              <table class="table table-sm">
                <thead>
                  <tr>
                    <th>Type</th>
                    <th>Value</th>
                  </tr>
                </thead>
                <tbody>
                  <% @artist.identifiers.each do |identifier| %>
                    <tr>
                      <td><span class="badge badge-sm"><%= identifier.identifier_type %></span></td>
                      <td class="font-mono text-sm"><%= identifier.value %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Primary Image -->
      <% if @artist.primary_image.present? && @artist.primary_image.file.attached? %>
        <div class="card bg-base-100 shadow-xl">
          <figure class="px-4 pt-4">
            <%= image_tag @artist.primary_image.file.variant(:medium), alt: @artist.name, class: "rounded-xl w-full" %>
          </figure>
          <div class="card-body">
            <h2 class="card-title text-sm">Primary Image</h2>
          </div>
        </div>
      <% end %>

      <!-- Stats -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Statistics</h2>
          <div class="stats stats-vertical shadow">
            <div class="stat">
              <div class="stat-title">Albums</div>
              <div class="stat-value text-primary"><%= @artist.albums.count %></div>
            </div>

            <div class="stat">
              <div class="stat-title">Songs</div>
              <div class="stat-value text-secondary"><%= @artist.songs.count %></div>
            </div>

            <div class="stat">
              <div class="stat-title">Images</div>
              <div class="stat-value"><%= @artist.images.count %></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Images Gallery -->
      <% if @artist.images.where.not(id: @artist.primary_image&.id).any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h2 class="card-title">
              Other Images
              <span class="badge badge-ghost"><%= @artist.images.count - 1 %></span>
            </h2>
            <div class="grid grid-cols-2 gap-2">
              <% @artist.images.where.not(id: @artist.primary_image&.id).limit(6).each do |image| %>
                <% if image.file.attached? %>
                  <div class="aspect-square">
                    <%= image_tag image.file.variant(:small), alt: @artist.name, class: "rounded w-full h-full object-cover" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Metadata -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title text-sm">Metadata</h2>
          <div class="space-y-2 text-sm">
            <div>
              <span class="text-base-content/70">Slug:</span>
              <span class="font-mono"><%= @artist.slug %></span>
            </div>
            <div>
              <span class="text-base-content/70">Created:</span>
              <span><%= @artist.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
            <div>
              <span class="text-base-content/70">Updated:</span>
              <span><%= @artist.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Add Album Modal -->
<dialog id="add_album_modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Add Album to Artist</h3>
    <p class="py-4 text-sm text-gray-500">
      Search for an album to associate with this artist. You can set the position to control album ordering.
    </p>

    <%= form_with model: Music::AlbumArtist.new,
                  url: admin_artist_album_artists_path(@artist),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_album_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :artist_id, "Artist", class: "label" do %>
          <span class="label-text font-semibold">Artist</span>
        <% end %>
        <%= f.text_field :artist_id,
            value: @artist.name,
            disabled: true,
            class: "input input-bordered input-disabled w-full" %>
        <%= f.hidden_field :artist_id, value: @artist.id %>
      </div>

      <div class="form-control">
        <%= f.label :album_id, "Album", class: "label" do %>
          <span class="label-text font-semibold">Album <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "music_album_artist[album_id]",
          url: search_admin_albums_path,
          placeholder: "Search for album...",
          required: true
        ) %>
      </div>

      <div class="form-control">
        <%= f.label :position, class: "label" do %>
          <span class="label-text font-semibold">Position</span>
        <% end %>
        <%= f.number_field :position,
            value: 1,
            min: 1,
            class: "input input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Position in album ordering (1 = first album)</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_album_modal.close()">Cancel</button>
        <%= f.submit "Add Album", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Add Song Modal -->
<dialog id="add_song_modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Add Song to Artist</h3>
    <p class="py-4 text-sm text-gray-500">
      Search for a song to associate with this artist. You can set the position to control song ordering.
    </p>

    <%= form_with model: Music::SongArtist.new,
                  url: admin_artist_song_artists_path(@artist),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_song_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :artist_id, "Artist", class: "label" do %>
          <span class="label-text font-semibold">Artist</span>
        <% end %>
        <%= f.text_field :artist_id,
            value: @artist.name,
            disabled: true,
            class: "input input-bordered input-disabled w-full" %>
        <%= f.hidden_field :artist_id, value: @artist.id %>
      </div>

      <div class="form-control">
        <%= f.label :song_id, "Song", class: "label" do %>
          <span class="label-text font-semibold">Song <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "music_song_artist[song_id]",
          url: search_admin_songs_path,
          placeholder: "Search for song...",
          required: true
        ) %>
      </div>

      <div class="form-control">
        <%= f.label :position, class: "label" do %>
          <span class="label-text font-semibold">Position</span>
        <% end %>
        <%= f.number_field :position,
            value: @artist.song_artists.maximum(:position).to_i + 1,
            min: 1,
            class: "input input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Position in song ordering (1 = first song)</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_song_modal.close()">Cancel</button>
        <%= f.submit "Add Song", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Add Category Modal -->
<%= render Admin::AddCategoryModalComponent.new(item: @artist) %>

<!-- Merge Artist Modal -->
<dialog id="merge-artist-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Merge Another Artist Into This One</h3>
    <p class="py-4">
      Search for a duplicate artist to merge into the current artist.
      All albums, songs, credits, and other associations will be transferred.
      The source artist will be permanently deleted after merging.
    </p>

    <%= form_with url: execute_action_admin_artist_path(@artist),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "merge-artist-modal"
                  } do |f| %>
      <%= f.hidden_field :action_name, value: "MergeArtist" %>

      <div class="form-control">
        <%= f.label :source_artist_id, "Source Artist (to be deleted)", class: "label" do %>
          <span class="label-text font-semibold">Source Artist <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "source_artist_id",
          url: search_admin_artists_path(exclude_id: @artist.id),
          placeholder: "Search for artist to merge...",
          required: true
        ) %>
        <label class="label">
          <span class="label-text-alt">Search for the duplicate artist you want to merge into this one</span>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :confirm_merge, class: "checkbox", required: true %>
          <span class="label-text">I understand this action cannot be undone</span>
        </label>
        <label class="label">
          <span class="label-text-alt text-warning">The source artist will be permanently deleted after merging</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="document.getElementById('merge-artist-modal').close()">Cancel</button>
        <%= f.submit "Merge Artist", class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
