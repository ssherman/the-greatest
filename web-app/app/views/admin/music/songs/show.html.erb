<% content_for :title, @song.title %>

<div class="space-y-6">
  <div class="flex flex-col gap-4 sm:flex-row sm:items-start sm:justify-between">
    <div class="flex-1">
      <div class="flex items-center gap-2">
        <%= link_to admin_songs_path, class: "btn btn-ghost btn-sm btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <h1 class="text-3xl font-bold"><%= @song.title %></h1>
      </div>
    </div>
    <div class="flex gap-2">
      <%= link_to edit_admin_song_path(@song), class: "btn btn-primary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
        <span>Edit</span>
      <% end %>

      <!-- Execute Action Dropdown -->
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-outline">
          Actions
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow-lg bg-base-100 rounded-box w-52">
          <li>
            <button type="button"
                    class="text-left"
                    onclick="document.getElementById('merge-song-modal').showModal()">
              Merge Another Song
            </button>
          </li>
        </ul>
      </div>

      <%= button_to admin_song_path(@song),
                    method: :delete,
                    class: "btn btn-error btn-outline",
                    data: { turbo_confirm: "Are you sure you want to delete this song? This action cannot be undone." } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <span>Delete</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Basic Information</h2>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm font-semibold text-base-content/70">ID</p>
              <p class="text-base font-mono"><%= @song.id %></p>
            </div>

            <div>
              <p class="text-sm font-semibold text-base-content/70">Title</p>
              <p class="text-base"><%= @song.title %></p>
            </div>

            <div>
              <p class="text-sm font-semibold text-base-content/70">Slug</p>
              <p class="text-base font-mono text-sm"><%= @song.slug %></p>
            </div>

            <div>
              <p class="text-sm font-semibold text-base-content/70">Duration</p>
              <p class="text-base"><%= format_duration(@song.duration_secs) %></p>
            </div>

            <div>
              <p class="text-sm font-semibold text-base-content/70">Release Year</p>
              <p class="text-base"><%= @song.release_year || "—" %></p>
            </div>

            <div class="col-span-2">
              <p class="text-sm font-semibold text-base-content/70">ISRC</p>
              <p class="text-base font-mono text-sm"><%= @song.isrc.presence || "—" %></p>
            </div>

            <% if @song.description.present? %>
              <div class="col-span-2">
                <p class="text-sm font-semibold text-base-content/70">Description</p>
                <p class="text-base"><%= @song.description %></p>
              </div>
            <% end %>

            <% if @song.notes.present? %>
              <div class="col-span-2">
                <p class="text-sm font-semibold text-base-content/70">Internal Notes</p>
                <p class="text-base text-warning"><%= @song.notes %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-center mb-4">
            <h2 class="card-title">
              Artists
              <div class="badge badge-primary"><%= @song.song_artists.count %></div>
            </h2>

            <button class="btn btn-primary btn-sm"
                    onclick="add_artist_modal.showModal()">
              + Add Artist
            </button>
          </div>

          <%= turbo_frame_tag "song_artists_list" do %>
            <%= render "artists_list", song: @song %>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Track Appearances
            <div class="badge badge-primary"><%= @song.tracks.count %></div>
          </h2>

          <% if @song.tracks.any? %>
            <% tracks_by_release = @song.tracks.includes(release: [:album]).group_by(&:release) %>
            <% tracks_by_release.each do |release, tracks| %>
              <div class="mb-4">
                <h3 class="font-semibold mb-2">
                  <%= link_to release.album.title, admin_album_path(release.album),
                      class: "link link-hover",
                      data: { turbo_frame: "_top" } %>
                  <span class="text-sm text-base-content/50">
                    (<%= release.format.titleize %> - <%= release.status.titleize %>)
                  </span>
                </h3>

                <div class="overflow-x-auto">
                  <table class="table table-zebra table-sm">
                    <thead>
                      <tr>
                        <th>Disc</th>
                        <th>Track</th>
                        <th>Duration</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% tracks.sort_by { |t| [t.medium_number, t.position] }.each do |track| %>
                        <tr>
                          <td><%= track.medium_number %></td>
                          <td><%= track.position %></td>
                          <td><%= format_duration(track.length_secs || @song.duration_secs) %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-base-content/50">This song does not appear on any releases.</p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            External Links
            <div class="badge badge-primary"><%= @song.external_links.count %></div>
          </h2>

          <% if @song.external_links.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
              <% @song.external_links.each do |link| %>
                <a href="<%= link.url %>" target="_blank" rel="noopener" class="btn btn-sm btn-outline gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                  <%= link.kind.titleize %>
                </a>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No external links found.</p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            List Items
            <div class="badge badge-primary"><%= @song.list_items.count %></div>
          </h2>

          <% if @song.list_items.any? %>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>List</th>
                    <th>Position</th>
                  </tr>
                </thead>
                <tbody>
                  <% @song.list_items.each do |list_item| %>
                    <tr>
                      <td>
                        <%= link_to list_item.list.name,
                            music_song_list_path(list_item.list),
                            class: "link link-hover",
                            target: "_blank" %>
                      </td>
                      <td><%= list_item.position %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-base-content/50">This song is not part of any lists.</p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Rankings
            <div class="badge badge-primary"><%= @song.ranked_items.count %></div>
          </h2>

          <% if @song.ranked_items.any? %>
            <div class="overflow-x-auto">
              <table class="table table-zebra">
                <thead>
                  <tr>
                    <th>Ranking Configuration</th>
                    <th>Position</th>
                  </tr>
                </thead>
                <tbody>
                  <% @song.ranked_items.each do |ranked_item| %>
                    <tr>
                      <td><%= ranked_item.ranking_configuration.name %></td>
                      <td>#<%= ranked_item.position %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-base-content/50">This song has no ranking positions.</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Categories
            <div class="badge badge-primary"><%= @song.categories.count %></div>
          </h2>

          <% if @song.categories.any? %>
            <div class="flex flex-wrap gap-2">
              <% @song.categories.each do |category| %>
                <%= link_to category.name,
                    music_category_path(category),
                    class: "badge badge-lg",
                    target: "_blank" %>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No categories assigned.</p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">
            Identifiers
            <div class="badge badge-primary"><%= @song.identifiers.count %></div>
          </h2>

          <% if @song.identifiers.any? %>
            <div class="space-y-2">
              <% @song.identifiers.each do |identifier| %>
                <div class="flex justify-between items-center">
                  <span class="text-sm font-semibold"><%= identifier.identifier_type.titleize %></span>
                  <span class="font-mono text-sm"><%= identifier.value %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-base-content/50">No identifiers found.</p>
          <% end %>
        </div>
      </div>

      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h2 class="card-title">Metadata</h2>

          <div class="space-y-2">
            <div class="flex justify-between items-center">
              <span class="text-sm font-semibold">Created</span>
              <span class="text-sm"><%= @song.created_at.strftime("%Y-%m-%d %H:%M") %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-sm font-semibold">Updated</span>
              <span class="text-sm"><%= @song.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<dialog id="merge-song-modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Merge Another Song Into This One</h3>
    <p class="py-4">
      Enter the ID of a duplicate song to merge into the current song.
      The source song will be permanently deleted after merging.
    </p>

    <%= form_with url: execute_action_admin_song_path(@song),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "merge-song-modal"
                  } do |f| %>
      <%= f.hidden_field :action_name, value: "MergeSong" %>

      <div class="form-control">
        <%= f.label :source_song_id, "Source Song ID (to be deleted)", class: "label" %>
        <%= f.number_field :source_song_id,
                          class: "input input-bordered w-full",
                          placeholder: "e.g., 123",
                          required: true %>
        <label class="label">
          <span class="label-text-alt">Enter the ID of the duplicate song</span>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-2">
          <%= f.check_box :confirm_merge, class: "checkbox", required: true %>
          <span class="label-text">I understand this action cannot be undone</span>
        </label>
        <label class="label">
          <span class="label-text-alt text-warning">The source song will be permanently deleted after merging</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="document.getElementById('merge-song-modal').close()">Cancel</button>
        <%= f.submit "Merge Song", class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<!-- Add Artist Modal -->
<dialog id="add_artist_modal" class="modal">
  <div class="modal-box max-w-2xl">
    <h3 class="font-bold text-lg">Add Artist to Song</h3>
    <p class="py-4 text-sm text-gray-500">
      Search for an artist to associate with this song. You can set the position to control artist ordering.
    </p>

    <%= form_with model: Music::SongArtist.new,
                  url: admin_song_song_artists_path(@song),
                  method: :post,
                  class: "space-y-4",
                  data: {
                    controller: "modal-form",
                    modal_form_modal_id_value: "add_artist_modal"
                  } do |f| %>

      <div class="form-control">
        <%= f.label :song_id, "Song", class: "label" do %>
          <span class="label-text font-semibold">Song</span>
        <% end %>
        <%= f.text_field :song_id,
            value: @song.title,
            disabled: true,
            class: "input input-bordered input-disabled w-full" %>
        <%= f.hidden_field :song_id, value: @song.id %>
      </div>

      <div class="form-control">
        <%= f.label :artist_id, "Artist", class: "label" do %>
          <span class="label-text font-semibold">Artist <span class="text-error">*</span></span>
        <% end %>
        <%= render AutocompleteComponent.new(
          name: "music_song_artist[artist_id]",
          url: search_admin_artists_path,
          placeholder: "Search for artist...",
          required: true
        ) %>
      </div>

      <div class="form-control">
        <%= f.label :position, class: "label" do %>
          <span class="label-text font-semibold">Position</span>
        <% end %>
        <%= f.number_field :position,
            value: @song.song_artists.maximum(:position).to_i + 1,
            min: 1,
            class: "input input-bordered w-full",
            required: true %>
        <label class="label">
          <span class="label-text-alt">Position in artist ordering (1 = first artist)</span>
        </label>
      </div>

      <div class="modal-action">
        <button type="button" class="btn" onclick="add_artist_modal.close()">Cancel</button>
        <%= f.submit "Add Artist", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
