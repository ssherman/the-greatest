<%= form_with model: @ranking_configuration, scope: :ranking_configuration, url: @ranking_configuration.persisted? ? admin_songs_ranking_configuration_path(@ranking_configuration) : admin_songs_ranking_configurations_path, class: "space-y-6" do |f| %>
  <% if @ranking_configuration.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <div>
        <h3 class="font-bold"><%= pluralize(@ranking_configuration.errors.count, "error") %> prohibited this ranking configuration from being saved:</h3>
        <ul class="list-disc list-inside mt-2">
          <% @ranking_configuration.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Basic Information</h2>

      <div class="grid grid-cols-1 gap-4">
        <div class="form-control">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-semibold">Name <span class="text-error">*</span></span>
          <% end %>
          <%= f.text_field :name,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:name].any? ? 'input-error' : ''}",
              placeholder: "Enter configuration name",
              required: true,
              autofocus: true %>
          <% if @ranking_configuration.errors[:name].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:name].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :description, class: "label" do %>
            <span class="label-text font-semibold">Description</span>
          <% end %>
          <%= f.text_area :description,
              class: "textarea textarea-bordered w-full h-24 #{@ranking_configuration.errors[:description].any? ? 'textarea-error' : ''}",
              placeholder: "Enter a description of this ranking configuration..." %>
          <label class="label">
            <span class="label-text-alt">Optional description for this configuration</span>
          </label>
          <% if @ranking_configuration.errors[:description].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:description].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Configuration Flags</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-4">
            <%= f.check_box :primary,
                class: "checkbox #{@ranking_configuration.errors[:primary].any? ? 'checkbox-error' : ''}" %>
            <span class="label-text">
              <span class="font-semibold">Primary Configuration</span>
              <span class="block text-sm text-base-content/70">Only one primary configuration allowed per type</span>
            </span>
          </label>
          <% if @ranking_configuration.errors[:primary].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:primary].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-4">
            <%= f.check_box :global,
                class: "checkbox #{@ranking_configuration.errors[:global].any? ? 'checkbox-error' : ''}" %>
            <span class="label-text">
              <span class="font-semibold">Global Configuration</span>
              <span class="block text-sm text-base-content/70">Available to all users</span>
            </span>
          </label>
          <% if @ranking_configuration.errors[:global].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:global].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-4">
            <%= f.check_box :archived,
                class: "checkbox #{@ranking_configuration.errors[:archived].any? ? 'checkbox-error' : ''}" %>
            <span class="label-text">
              <span class="font-semibold">Archived</span>
              <span class="block text-sm text-base-content/70">Hide from active configurations</span>
            </span>
          </label>
          <% if @ranking_configuration.errors[:archived].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:archived].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :published_at, class: "label" do %>
            <span class="label-text font-semibold">Published At</span>
          <% end %>
          <%= f.datetime_local_field :published_at,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:published_at].any? ? 'input-error' : ''}" %>
          <label class="label">
            <span class="label-text-alt">Leave empty for draft status</span>
          </label>
          <% if @ranking_configuration.errors[:published_at].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:published_at].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Algorithm Parameters</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-control">
          <%= f.label :algorithm_version, class: "label" do %>
            <span class="label-text font-semibold">Algorithm Version <span class="text-error">*</span></span>
          <% end %>
          <%= f.number_field :algorithm_version,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:algorithm_version].any? ? 'input-error' : ''}",
              min: 1,
              required: true %>
          <label class="label">
            <span class="label-text-alt">Version of the ranking algorithm</span>
          </label>
          <% if @ranking_configuration.errors[:algorithm_version].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:algorithm_version].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :exponent, class: "label" do %>
            <span class="label-text font-semibold">Exponent <span class="text-error">*</span></span>
          <% end %>
          <%= f.number_field :exponent,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:exponent].any? ? 'input-error' : ''}",
              step: 0.01,
              min: 0.01,
              max: 10,
              required: true %>
          <label class="label">
            <span class="label-text-alt">Exponent for ranking calculations (0.01-10)</span>
          </label>
          <% if @ranking_configuration.errors[:exponent].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:exponent].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :bonus_pool_percentage, class: "label" do %>
            <span class="label-text font-semibold">Bonus Pool Percentage <span class="text-error">*</span></span>
          <% end %>
          <%= f.number_field :bonus_pool_percentage,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:bonus_pool_percentage].any? ? 'input-error' : ''}",
              step: 0.01,
              min: 0,
              max: 100,
              required: true %>
          <label class="label">
            <span class="label-text-alt">Percentage of bonus pool (0-100)</span>
          </label>
          <% if @ranking_configuration.errors[:bonus_pool_percentage].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:bonus_pool_percentage].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :min_list_weight, class: "label" do %>
            <span class="label-text font-semibold">Min List Weight <span class="text-error">*</span></span>
          <% end %>
          <%= f.number_field :min_list_weight,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:min_list_weight].any? ? 'input-error' : ''}",
              min: 0,
              required: true %>
          <label class="label">
            <span class="label-text-alt">Minimum weight for lists</span>
          </label>
          <% if @ranking_configuration.errors[:min_list_weight].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:min_list_weight].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :list_limit, class: "label" do %>
            <span class="label-text font-semibold">List Limit</span>
          <% end %>
          <%= f.number_field :list_limit,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:list_limit].any? ? 'input-error' : ''}",
              min: 1,
              placeholder: "No limit" %>
          <label class="label">
            <span class="label-text-alt">Maximum number of lists to consider (optional)</span>
          </label>
          <% if @ranking_configuration.errors[:list_limit].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:list_limit].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Penalty Configuration</h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-control md:col-span-2">
          <label class="label cursor-pointer justify-start gap-4">
            <%= f.check_box :apply_list_dates_penalty,
                class: "checkbox #{@ranking_configuration.errors[:apply_list_dates_penalty].any? ? 'checkbox-error' : ''}" %>
            <span class="label-text">
              <span class="font-semibold">Apply List Dates Penalty</span>
              <span class="block text-sm text-base-content/70">Apply penalty based on list publication dates</span>
            </span>
          </label>
          <% if @ranking_configuration.errors[:apply_list_dates_penalty].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:apply_list_dates_penalty].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :max_list_dates_penalty_age, class: "label" do %>
            <span class="label-text font-semibold">Max Age</span>
          <% end %>
          <%= f.number_field :max_list_dates_penalty_age,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:max_list_dates_penalty_age].any? ? 'input-error' : ''}",
              min: 1,
              placeholder: "e.g., 50" %>
          <label class="label">
            <span class="label-text-alt">Maximum age in years for penalty calculation</span>
          </label>
          <% if @ranking_configuration.errors[:max_list_dates_penalty_age].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:max_list_dates_penalty_age].first %></span>
            </label>
          <% end %>
        </div>

        <div class="form-control">
          <%= f.label :max_list_dates_penalty_percentage, class: "label" do %>
            <span class="label-text font-semibold">Max Percentage</span>
          <% end %>
          <%= f.number_field :max_list_dates_penalty_percentage,
              class: "input input-bordered w-full #{@ranking_configuration.errors[:max_list_dates_penalty_percentage].any? ? 'input-error' : ''}",
              min: 1,
              max: 100,
              placeholder: "e.g., 80" %>
          <label class="label">
            <span class="label-text-alt">Maximum penalty percentage (1-100)</span>
          </label>
          <% if @ranking_configuration.errors[:max_list_dates_penalty_percentage].any? %>
            <label class="label">
              <span class="label-text-alt text-error"><%= @ranking_configuration.errors[:max_list_dates_penalty_percentage].first %></span>
            </label>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row gap-2 justify-end">
    <%= link_to "Cancel", @ranking_configuration.persisted? ? admin_songs_ranking_configuration_path(@ranking_configuration) : admin_songs_ranking_configurations_path, class: "btn btn-ghost" %>
    <%= f.submit @ranking_configuration.persisted? ? "Update Configuration" : "Create Configuration", class: "btn btn-primary" %>
  </div>
<% end %>
