<% if ranking_configurations.any? %>
  <div class="overflow-x-auto">
    <table class="table table-zebra table-hover">
      <thead>
        <tr>
          <th>
            <label>
              <input type="checkbox" class="checkbox checkbox-sm" />
            </label>
          </th>
          <th>
            <%= link_to admin_songs_ranking_configurations_path(sort: "id", q: params[:q]), data: { turbo_frame: "ranking_configurations_table" }, class: "link link-hover" do %>
              ID
            <% end %>
          </th>
          <th>
            <%= link_to admin_songs_ranking_configurations_path(sort: "name", q: params[:q]), data: { turbo_frame: "ranking_configurations_table" }, class: "link link-hover" do %>
              Name
            <% end %>
          </th>
          <th>Status</th>
          <th>
            <%= link_to admin_songs_ranking_configurations_path(sort: "algorithm_version", q: params[:q]), data: { turbo_frame: "ranking_configurations_table" }, class: "link link-hover" do %>
              Algorithm Version
            <% end %>
          </th>
          <th>
            <%= link_to admin_songs_ranking_configurations_path(sort: "published_at", q: params[:q]), data: { turbo_frame: "ranking_configurations_table" }, class: "link link-hover" do %>
              Published At
            <% end %>
          </th>
          <th>
            <%= link_to admin_songs_ranking_configurations_path(sort: "created_at", q: params[:q]), data: { turbo_frame: "ranking_configurations_table" }, class: "link link-hover" do %>
              Created
            <% end %>
          </th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% ranking_configurations.each do |config| %>
          <tr>
            <td>
              <label>
                <input type="checkbox"
                       class="checkbox checkbox-sm"
                       value="<%= config.id %>" />
              </label>
            </td>
            <td class="font-mono text-sm">
              <%= link_to config.id, admin_songs_ranking_configuration_path(config),
                  class: "link link-hover",
                  data: { turbo_frame: "_top" } %>
            </td>
            <td>
              <div>
                <div class="font-bold">
                  <%= link_to config.name, admin_songs_ranking_configuration_path(config),
                      class: "link link-hover",
                      data: { turbo_frame: "_top" } %>
                </div>
                <% if config.description.present? %>
                  <div class="text-sm opacity-50">
                    <%= truncate(config.description, length: 60) %>
                  </div>
                <% end %>
              </div>
            </td>
            <td>
              <div class="flex flex-wrap gap-1">
                <% if config.primary? %>
                  <span class="badge badge-primary badge-sm">Primary</span>
                <% end %>
                <% if config.global? %>
                  <span class="badge badge-secondary badge-sm">Global</span>
                <% end %>
                <% if config.archived? %>
                  <span class="badge badge-ghost badge-sm">Archived</span>
                <% end %>
              </div>
            </td>
            <td>
              <span class="badge badge-outline badge-sm"><%= config.algorithm_version %></span>
            </td>
            <td class="text-sm text-base-content/70">
              <% if config.published_at.present? %>
                <%= time_tag config.published_at, config.published_at.strftime("%b %d, %Y") %>
              <% else %>
                <span class="text-base-content/30">Not published</span>
              <% end %>
            </td>
            <td class="text-sm text-base-content/70">
              <%= time_tag config.created_at, config.created_at.strftime("%b %d, %Y") %>
            </td>
            <td>
              <div class="flex justify-end gap-1">
                <%= link_to admin_songs_ranking_configuration_path(config),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "View" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <%= link_to edit_admin_songs_ranking_configuration_path(config),
                    class: "btn btn-ghost btn-xs",
                    data: { turbo_frame: "_top" },
                    title: "Edit" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                <% end %>
                <%= button_to admin_songs_ranking_configuration_path(config),
                    method: :delete,
                    class: "btn btn-ghost btn-xs text-error",
                    title: "Delete",
                    data: { turbo_confirm: "Are you sure you want to delete #{config.name}?" } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if defined?(pagy) && pagy %>
    <div class="flex justify-center py-4 border-t border-base-300">
      <%== pagy_nav(pagy) if pagy.pages > 1 %>
    </div>
  <% end %>
<% else %>
  <div class="py-12 text-center">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-base-content/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
    </svg>
    <h3 class="mt-4 text-lg font-semibold">No ranking configurations found</h3>
    <p class="mt-2 text-sm text-base-content/70">
      <% if params[:q].present? %>
        Try adjusting your search or <%= link_to "clear filters", admin_songs_ranking_configurations_path, class: "link link-primary" %>.
      <% else %>
        Get started by creating your first ranking configuration.
      <% end %>
    </p>
    <% if params[:q].blank? %>
      <div class="mt-6">
        <%= link_to new_admin_songs_ranking_configuration_path, class: "btn btn-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          <span>New Ranking Configuration</span>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
