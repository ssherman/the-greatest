<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2">Top Albums</h1>
    <% if @ranking_configuration %>
      <p class="text-base-content/70">
        <%= @ranking_configuration.name %>
        <% if @ranking_configuration.description.present? %>
          - <%= @ranking_configuration.description %>
        <% end %>
      </p>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% @albums.each do |ranked_item| %>
      <% album = ranked_item.item %>
      <div class="card bg-base-100 shadow-xl">
        <figure class="px-4 pt-4">
          <% if album.primary_image %>
            <%= image_tag rails_public_blob_url(album.primary_image.file), 
                alt: album.title, 
                class: "rounded-xl w-full aspect-square object-cover" %>
          <% else %>
            <div class="bg-base-200 rounded-xl w-full aspect-square flex items-center justify-center">
              <span class="text-base-content/50">No Image</span>
            </div>
          <% end %>
        </figure>
        
        <div class="card-body p-4">
          <div class="flex items-start justify-between mb-2">
            <div class="badge badge-primary badge-lg font-bold">
              #<%= ranked_item.rank %>
            </div>
            <div class="text-right text-sm text-base-content/70">
              <% if album.release_year %>
                <%= album.release_year %>
              <% end %>
            </div>
          </div>
          
          <h2 class="card-title text-lg font-bold text-base-content mb-1">
            <%= album.title %>
          </h2>
          
          <p class="text-base-content/80 mb-3">
            by <%= album.artists.map(&:name).join(", ") %>
          </p>
          
          <% if album.categories.any? %>
            <div class="flex flex-wrap gap-1">
              <% album.categories.limit(3).each do |category| %>
                <span class="badge badge-ghost badge-sm">
                  <%= category.name %>
                </span>
              <% end %>
              <% if album.categories.count > 3 %>
                <span class="badge badge-ghost badge-sm">
                  +<%= album.categories.count - 3 %> more
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @albums.empty? %>
    <div class="text-center py-16">
      <div class="text-6xl mb-4">ðŸŽµ</div>
      <h2 class="text-2xl font-bold text-base-content mb-2">No albums found</h2>
      <p class="text-base-content/70">
        This ranking configuration doesn't have any albums yet.
      </p>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="flex justify-center mt-8">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
