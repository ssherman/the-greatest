<%
  content_for :page_title, songs_page_title(@year_filter)
  content_for :meta_description, songs_page_description(@year_filter)
%>

<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-base-content mb-2"><%= songs_page_heading(@year_filter) %></h1>
    <% if @ranking_configuration %>
      <p class="text-base-content/70">
        <%= @ranking_configuration.name %>
        <% if @ranking_configuration.description.present? %>
          - <%= @ranking_configuration.description %>
        <% end %>
      </p>
    <% end %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th class="w-20 text-center">Rank</th>
              <th>Song</th>
              <th>Artist</th>
              <th>Year</th>
            </tr>
          </thead>
          <tbody>
            <% @songs.each do |ranked_item| %>
              <%= render Music::Songs::ListItemComponent.new(song: ranked_item.item, ranked_item: ranked_item, ranking_configuration: @ranking_configuration) %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <% if @songs.empty? %>
    <div class="text-center py-16">
      <div class="text-6xl mb-4">ðŸŽµ</div>
      <h2 class="text-2xl font-bold text-base-content mb-2">No songs found</h2>
      <p class="text-base-content/70">
        This ranking configuration doesn't have any songs yet.
      </p>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="flex justify-center mt-8">
      <%== @pagy.series_nav %>
    </div>
  <% end %>
</div>
